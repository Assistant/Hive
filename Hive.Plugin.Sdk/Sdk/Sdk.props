<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <UsingHivePluginSdk>true</UsingHivePluginSdk>
    <MSBuildAllProjects Condition="'$(MSBuildToolsVersion)' != 'Current'">$(MSBuildAllProjects);$(MsBuildThisFileFullPath)</MSBuildAllProjects>

    <HiveToolsDirectory>$(MSBuildThisFileDirectory)..\msbtools\</HiveToolsDirectory> <!-- in the package, relative to this file, aka /Sdk/ -->
  </PropertyGroup>
  
  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" Condition=" '$(MicrosoftCommonPropsHasBeenImported)' != 'true' "/>

  <PropertyGroup>
    <ImportHiveDefaultTargets>true</ImportHiveDefaultTargets>
    <ImportInternalsVisibleToTargets>true</ImportInternalsVisibleToTargets>
    <ImportLiteralAssemblyAttributeTargets>true</ImportLiteralAssemblyAttributeTargets>
    <EnableHiveCodeGen>true</EnableHiveCodeGen>
  </PropertyGroup>
  
</Project>