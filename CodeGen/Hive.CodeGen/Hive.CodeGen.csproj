  </ItemGroup>
  
  <ItemGroup>
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="IsResXToGenerate" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Hive.CodeGen.Attributes\Hive.CodeGen.Attributes.csproj" PrivateAssets="all" Private="true" />
  </ItemGroup>
  
</Project>
